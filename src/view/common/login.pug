extends ../common/app

block content
    .row 
        .offset-md-3.col-md-6
            .card
                .card-header.text-center.fs-3= process.env.APP_NAME 

                .card-body 
                    form(action='user/api/login' method='POST')
                        .form-group.my-3
                            label(for='username') Nome de usuário
                            input.form-control(type='username', name='username' autofocus=true)
                        .form-group.mb-3
                            label(for='password') Senha
                            input.form-control(type='password', name='password')
                            if forbidden == "true"
                                small.text-danger Senha incorreta!
                        button.btn.btn-primary.mb-2(type='submit') Log-in
                
                .card-footer.small.text-center Caso não tenha usuário, solicite ao setor de TI.
